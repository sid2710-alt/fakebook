<link rel="stylesheet" href="/css/user_profile.css">
<img src="<%=user.avatar%>" alt= "<%=user.name%>" width=100>

        
        

        <%if(user.id==profile_user.id) {%>
            <form action="/users/update/<%=user.id%>" method="POST" enctype="multipart/form-data" >
                <input type="text" name="name" placeholder="Your Name" value="<%user.name%>" required>
                <input type="text" name="email" placeholder="Your Email" value="<%user.email%>" required>
                 <input type="file" name="avatar" placeholder="Profile Picture">
                <input type="submit" value="update">
                
            </form>

            <%}else {%>
                <p><%=profile_user.name %></p>
                <p><%=profile_user.email %></p>
            
            <%}%>
